<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimplePressureRegulator.Views.MainMenu"
             Shell.NavBarIsVisible="False">

    <StackLayout>
        <Label Text=" " FontSize="20" Padding="30,10,30,10"  HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black"/>
        <Image Source="PlastomaticLogo"
       WidthRequest="{OnPlatform iOS=300, Android=250}"
       HorizontalOptions="Center" />
        <Label Text="" FontSize="20" Padding="30,10,30,10"  HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black"/>
        <Label Text="Valve Specification App" FontSize="Title" Padding="30,10,30,10"  HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black"/>
        <Label Text="Alpha Version 0.5" FontSize="16" Padding="30,0,30,0"  HorizontalOptions="Center"/>
        <StackLayout Margin="10,10,10,0">
            <Button Text="Pressure Regulator Tool" Clicked="StartPressureRegulator" BackgroundColor="#2196F3" TextColor="White"/>
            <Button Text="More coming soon..."/>
        </StackLayout>
    </StackLayout>

</ContentPage>
